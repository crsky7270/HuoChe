@{
    ViewBag.Title = "Guide";
}
<style>
    .guide {
        top: 0;
        position: absolute;
        padding-top: 40%;
        width: 100%;
        height: 100%;
        display: none;
    }

        .guide a {
            width: 75%;
            margin: auto;
        }

    #xzbj {
        width: 100%;
        height: 100%;
        margin: 0px;
        display: none;
    }
</style>
<img src="/images/splash.jpg" style="width:100%;height:100%;margin:0px;" id="_img" />
<img src="/images/xzbj.jpg" id="xzbj" />
<div class="guide">
    <a href="/TipsQuery/index" class="button button-block button-glow button-rounded button-raised button-primary button-large">南昌站</a>
    <div style="height:40px;"></div>
    <a href="/TipsQuery/WestStation" class="button button-block button-glow button-rounded button-raised button-primary button-large">南昌西站</a>
</div>
@section scripts{
    <script>
        //$('img').css({ 'height': window.screen.availHeight + 'px' });

        window.setInterval(function () {
            $('#_img').hide();
            $('.guide').slideDown('slow');
            $('#xzbj').slideDown();
        }, 3000);

    </script>
}
